<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/searchIdleBoarder" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:bottom="@dimen/main_search_button_padding" android:left="@dimen/main_search_button_padding" android:right="@dimen/main_search_button_padding" android:top="@dimen/main_search_button_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/searchIdleCenter" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/searchPressedBoarder" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:bottom="@dimen/main_search_button_padding" android:left="@dimen/main_search_button_padding" android:right="@dimen/main_search_button_padding" android:top="@dimen/main_search_button_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/searchPressedCenter" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/searchIdleBoarder" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:bottom="@dimen/main_search_button_padding" android:left="@dimen/main_search_button_padding" android:right="@dimen/main_search_button_padding" android:top="@dimen/main_search_button_padding">
                <shape android:shape="rectangle">
                    <solid android:color="@color/searchIdleCenter" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>